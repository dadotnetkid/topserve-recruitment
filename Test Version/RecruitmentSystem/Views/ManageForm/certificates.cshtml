@model IEnumerable<RecruitmentSystem.Recruitment.Data.sp_certificates_listResult>
@{
    Layout = null;
}
<table class="table table-small-font table-hover table-striped ">
    <thead>
        <tr>
            <th>Certificate Name</th>
            <th>Date Created</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.certificate_name</td>
                <td>@i.date_created</td>
            </tr>

        }

    </tbody>
</table>
<div id="add-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="form-add">
                <div class="modal-header modal-header-danger">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Certificate</h4>
                </div>
                <div class="modal-body">
                    <input type="text" id="certificate" required="" class="form-control" name="certificate" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" onclick="addform('@Url.Action("certificates")','#form-add','@Url.Action("certificates")','#certificates','#alert-container','#certificate')" class="btn btn-danger">Save changes</button>  
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<div id="import-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="import-form" method="post" action="@Url.Action("ImportCertificates")" enctype="multipart/form-data">
                <div class="modal-header modal-header-danger">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Import Certificates</h4>
                </div>
                <div class="modal-body">
                    <input type="file" name="file" class="file-hidden" id="file" onchange="onchangeimportfilebrowse(this,'#filename')" />
                    <input type="text" class="form-control  " id="filename" placeholder="Filename" onclick="clickfilebrowse('#file')" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" onclick="FormSubmit('#import-form')" class="btn btn-danger">Import</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
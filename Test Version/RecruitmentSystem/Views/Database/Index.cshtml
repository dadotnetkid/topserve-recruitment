@model IEnumerable<RecruitmentSystem.Models.DatabaseBackupModelViewController>
@{
    ViewBag.Title = "Database Archieve";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h4 class="">Database Archieve</h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li class=""><a href="@Url.Action("dashboard","home")">Dashboard</a></li>
            <li class="active">Database Archieve</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="panel panel-default panel-default-red">
        <div class="panel-heading">
            <h4 class="panel-title">Backup</h4>
        </div>
        <div class=" panel-body">
            <div class="row">
                <div class="col-lg-6">

                </div>
                <div class="col-lg-6">
                    <a class="btn btn-default-red pull-right" href="@Url.Action("Backup")">Backup</a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-bordered table-condensed">
                        <thead>
                            <tr>
                                <th>File Name</th>
                                <th width="10%">Length</th>
                                <th>Date Created</th>
                                <th width="10%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td>@i.Filename</td>
                                    <td>@i.FileLength</td>
                                    <td>@i.DateCreated</td>
                                    <td>
                                        <div class="btn-group">
                                            <button class="btn btn-danger no-radius">Action</button>
                                            <button class="btn btn-danger dropdown" data-toggle="dropdown" id="@i.Filename"><span class="fa fa-caret-down"></span></button>
                                            <ul class="dropdown-menu" aria-labelledby="@i.Filename">
                                                <li><a href="@Url.Action("restoredb", "database", new { filename=i.Filename})">Restore</a></li>
                                                <li><a href="@Url.Action("download", "database", new { filename=i.Filename})">Download</a></li>
                                                <li><a href="@Url.Action("delete", "database", new { filename=i.Filename})">Delete</a></li>

                                            </ul>

                                        </div>
                                    </td>
                                </tr>
                            }
                            @if (Model.Count() <= 0)
                            {
                                <tr>
                                    <td colspan="4" align="center">No Backup Set</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

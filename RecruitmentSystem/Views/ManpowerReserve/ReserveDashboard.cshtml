@using RecruitmentSystem.Recruitment.Class;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Reserve Manpower";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3>Reserve Manpower</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li><a href="@Url.Action("dashboard","home")">Dashboard</a></li>
            <li class="li-active">Reserve Manpower</li>
        </ol>
    </div>
</div>
@if (ViewBag.mrfid != "")
{
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-success">Successfully Created Manpower Reserve @ViewBag.mrfid</div>
        </div>
    </div>
}
<div class="well custom-panel">
    <div class="row">
        <form>

            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 pull-right">
                <div class="form-group">

                    <div class="input-group">
                        <input type="text" class="form-control" name="search" id="search" placeholder="Search by Reserve ID">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button" onclick="searchtablewithloading('form', '@Url.Action("_ReserveDashboard")', 'tbody',9,'@Url.Content("~/images/loading.gif")')">
                                <span class="fa fa-search"></span>
                            </button>
                            <div class="btn-group">
                                <a class="btn dropdown-toggle custom-button" data-toggle="dropdown" href="#">
                                    <span class="fa fa-ellipsis-v fa-lg" title="Toggle dropdown menu"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-right">
                                    @if (Users.IsInRole("Recruiter","Admin"))
                                    {
                                        <li><a href="#" onclick="redirecturl('@Url.Action("CreateManpowerReserve")')"><i class="fa fa-plus fa-fw" aria-hidden="true"></i> Create RMRF</a></li>
                                    }
                                    @*<li><a href="#"><i class="fa fa-upload fa-fw"></i> Import RMRF</a></li>*@
                                </ul>
                            </div>
                        </span>

                    </div>

                </div>

            </div>
        </form>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 table-responsive scrollable">
            <table class="table table-hover table-striped table-small-font">
                <thead>
                    <tr>
                        <th>Reserve ID</th>
                        <th>Position Name</th>
                        <th>Educational Attainment</th>
                        <th>Course Name</th>
                        <th>Gender</th>
                        <th>Age Requirement</th>
                        <th>Skill Type</th>
                        <th>Skills</th>
                        <th>Date Created</th>
                    </tr>
                </thead>
                <tbody>
                    @Html.Action("_ReserveDashboard")
                </tbody>
            </table>

        </div>
    </div>
</div>

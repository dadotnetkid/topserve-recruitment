@using RecruitmentSystem.Recruitment.Class
@model IEnumerable<RecruitmentSystem.Recruitment.Data.sp_notification_listResult>
@{
    Layout = null;
}
@if (Model.Count() > 0)
{
    foreach (var i in Model)
    {
        if (i.mrfid != "")
        {
            <li class="message-preview" onclick="redirecturl('@Url.Action("dashboard", "RecruitmentProcess", new { mrfid = i.mrfid })')">
                <a>
                    <div class="media">
                        <h5 class="media-heading"><strong>@Users.Fullname(i.notify_by)</strong></h5>
                        <p>@i.notification</p>
                        <p class="small text-muted"><i class="fa fa-clock-o"></i> @Tools.getdate(i.minutes) </p>
                    </div>
                </a>
            </li>
        }
        else
        {
            <li class="message-preview">
                <a>
                    <div class="media">
                        <h5 class="media-heading"><strong>@Users.Fullname(i.notify_by)</strong></h5>
                        <p>@i.notification</p>
                        <p class="small text-muted"><i class="fa fa-clock-o"></i> @Tools.getdate(i.minutes) </p>
                    </div>
                </a>
            </li>
        }
    }
}
